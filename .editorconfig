root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{py,sh}]
indent_style = space
indent_size = 4

[*.{yml,yaml,json,md}]
indent_style = space
indent_size = 2

[*.{ps1}]
end_of_line = crlf
indent_style = space
indent_size = 4

[*.{html,js,css}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
